<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_today">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="-36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="@string/login_title"
            android:tint="#fff"
            app:srcCompat="@drawable/ic_content_paste_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="12dp"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:text="My task"
                android:textStyle="normal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clipToPadding="false"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/login" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:elevation="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/login" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:elevation="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/login" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:elevation="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/login" />
                </LinearLayout>
            </HorizontalScrollView>

            <CheckBox
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="8dp"
                android:drawableStart="@android:color/transparent"
                android:text="Nullam vulputate libero tortor dindinn"
                android:textColor="#555"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="8dp"
                android:drawableStart="@android:color/transparent"
                android:text="Lorem ipsum dolor sit amet, elit tortor"
                android:textColor="#555"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="View completed task (3)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="#f6f7f7"
                android:padding="8dp">

                <EditText
                    android:id="@+id/email_singup"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Add a reply"
                    android:inputType="textEmailAddress"
                    android:textColor="#555"
                    android:textColorHint="#555"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:gravity="end">

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/icon"
                    android:tint="#555"
                    app:srcCompat="@drawable/ic_mic_24dp" />

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/icon"
                    android:tint="#555"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_chat_24dp" />

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/icon"
                    android:tint="#555"
                    app:srcCompat="@drawable/ic_image_24dp" />

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@string/icon"
                    android:tint="#555"
                    app:srcCompat="@drawable/ic_place_24dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/icon"
            android:tint="#555"
            app:srcCompat="@drawable/ic_done_24dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>